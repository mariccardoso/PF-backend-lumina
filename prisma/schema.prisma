generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String @default("user")

  @@map("users")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  @@map("categories")
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  imageUrl String

  @@map("posts")
}

model Comment {
  id      Int    @id @default(autoincrement())
  content String
  userId  Int
  createdAt DateTime @default(now())

  @@map("comments")
}

model Like {
  id      Int    @id @default(autoincrement())
  postId  Int
  userId  Int
  createdAt DateTime @default(now())

  @@map("likes")
}

